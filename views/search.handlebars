<main>

    <div class="container center">

        <br><br>
        {{!-- DROPDOWN TRIGGER FOR CATEGORIES --}}
        <div>

            <a class="card-radius dropdown-trigger btn btn-large deep-purple lighten-2" href="#" data-target="dropdown2"
                id="accent-font">what category of gear are you looking for?<i
                    class="material-icons right">expand_more</i></a>
            <ul class="dropdown-content" id="dropdown2">
                <hr>
                <li><a href="/search">SHOW ALL</a></li>
                <li><a href="/search/1">Hiking</a></li>
                <li><a href="/search/2">Camping/Backpacking</a></li>
                <li><a href="/search/3">Skiing</a></li>
                <li><a href="/search/4">Rockclimbing</a></li>
                <li><a href="/search/5">Cycling</a></li>
                <li><a href="/search/6">Snowboarding</a></li>
                <li><a href="/search/7">Canoeing</a></li>
                <li><a href="/search/8">Paddle Boarding</a></li>
                <li><a href="/search/9">Fishing</a></li>
                <li><a href="/search/10">Snow Shoeing</a></li>
                <li><a href="/search/11">Kayaking</a></li>
            </ul>
        </div>
        {{!-- COLLAPSIBLE CARD CONTENTS OF SEARCH RESULTS --}}
        <ul class="collapsible">
            {{#each gears}}
            <li>
                <div class="collapsible-header card horizontal card-radius">
                    <div class="card-image">
                        <img src="{{image}}" alt="Gear Image">
                    </div>
                    <div class="card-stacked">
                        <div class="card-content indigo-text left-align gear-card">
                            <ul>
                                <li>Gear Id: {{id}}</li>
                                <li class="divider" tabindex="-1"></li>
                                <li>Gear Owner: {{user.name}}</li>
                                <li class="divider" tabindex="-1"></li>
                                <li>Category : {{category.category_name}}</li>
                                <li class="divider" tabindex="-1"></li>
                                <li>Name: {{name}}</li>
                                <li class="divider" tabindex="-1"></li>
                                <li>Description: {{description}}</li>
                                <li class="divider" tabindex="-1"></li>
                                <li>Date Added: {{date_created}} </li>
                                <li class="divider" tabindex="-1"></li>
                                <li class="divider" tabindex="-1"></li>
                            </ul>
                            <br>
                            <button class="btn waves-effect waves-light right orange submit-button" type="submit"
                                name="action"><i class="material-icons right hide-on-med-and-down">check_box</i> Request
                                gear</button>
                        </div>
                    </div>
                </div>
                <div class="collapsible-body indigo lighten-5 card-radius small-form center">
                    <div class="row">
                        <div class="">
                            <div><a class="waves-effect waves-light btn red right"><i
                                        class="material-icons text-white close-collapsible">close</i></a></div>
                            {{msg}}
                            <h4>Gear Request Form</h4>
                            <p>Please complete the form below to request this gear item. Please include a detailed
                                message and
                                the date you would like to pick up the gear. Then check your email for a response
                                from the gear
                                owner to connect with the gear!</p>
                            <div class="container">
                                <form action="send" method="post" id="email-btn">
                                    <div class="container">
                                        <h5>Gear for: {{user.name}}</h5>
                                        <h6>Gear ID: {{id}}</h6>
                                        <p>
                                            <label>Start date</label>
                                            <input type="text" class="datepicker" name="date">
                                        </p>
                                        <p>
                                            <label class="active">Message</label>
                                            <textarea name="message" class="materialize-textarea active"
                                                rows="5"></textarea>
                                        </p>
                                    </div>
                                    <div class="container submit-button center">
                                        <button class="btn waves-effect waves-light green" type="submit"
                                            name="action"><i class="material-icons right">check_box</i>Submit
                                            Request</button>
                                        <br><br>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            {{/each}}

    </div>

</main>
<script>'/js/email.js'</script>